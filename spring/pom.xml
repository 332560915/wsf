	</distributionManagement>
	<profiles>
		<profile>
			<activation>
				<property>
					<name>release</name>
				</property>
			</activation>
			<modules>
				<module>distribution</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>${maven.gpg.version}</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
						<version>${maven.antrun.version}</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <configuration>
                                    <tasks>
                                        <checksum forceOverwrite="yes" algorithm="MD5" fileext=".md5">
											<fileset dir="target">
												<include name="*.jar" />
												<include name="*.zip" />
											</fileset>
										</checksum>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
