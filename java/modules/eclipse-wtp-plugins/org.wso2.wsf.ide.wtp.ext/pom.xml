	<build>
		<sourceDirectory>src</sourceDirectory>
		<!--testSourceDirectory>test</testSourceDirectory-->
		<resources>
			<resource>
				<directory>resources</directory>
			</resource>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>resources/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>distribution-package</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>${pom.basedir}/wsf.ide.wtp.ext.assembly.xml</descriptor>
							</descriptors>
							<finalName>dist</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<configuration>
							<tasks>
								<!--Filter tockens for the copy command to filter the versions of external dependencies -->
								<filter token="version" value="${version}"/>
								<filter token="axis2.version" value="${axis2.version}"/>
								<filter token="xmlschema.version" value="${xmlschema.version}"/>
								<filter token="commons.codec.version" value="${commons.codec.version}"/>
								<filter token="commons.httpclient.version" value="${commons.httpclient.version}"/>
								<filter token="commons.logging.versio" value="${commons.logging.versio}"/>
								<filter token="commons.logging.version" value="${commons.logging.version}"/>
								<filter token="axis2-saaj.version" value="${axis2-saaj.version}"/>
								<filter token="axis2-saaj-api.version" value="${axis2-saaj-api.version}"/>
								<filter token="stax.api.version" value="${stax.api.version}"/>
								<filter token="stax.impl.artifactid" value="${stax.impl.artifactid}"/>
								<filter token="stax.impl.groupid" value="${stax.impl.groupid}"/>
								<filter token="stax.impl.version" value="${stax.impl.version}"/>
								<filter token="mail.version" value="${mail.version}"/>
								<filter token="activation.version" value="${activation.version}"/>

								
								<delete dir="./target/dist"/>
								<delete dir="./target/temp"/>
								<delete dir="./target/plugin"/>
								<mkdir dir="./target/dist/org.wso2.wsf.ide.wtp.ext-${version}"/>
								<mkdir dir="./target/temp/org.wso2.wsf.ide.wtp.ext-${version}"/>
								<mkdir dir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}"/>

								<unzip src="./target/dist.jar" dest="./target/dist/org.wso2.wsf.ide.wtp.ext-${version}"/>
								<unzip src="./target/org.wso2.wsf.ide.wtp.ext-${version}.jar" dest="./target/temp/org.wso2.wsf.ide.wtp.ext-${version}"/>

								<!-- Copy to the same position with the filtering on-->
								<copy todir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}" filtering="on">
									<fileset dir="./target/temp/org.wso2.wsf.ide.wtp.ext-${version}">
										<include name="plugin.xml"/>
										<include name="build.properties"/>
										<include name="plugin.properties"/>
										<include name="META-INF/MANIFEST.MF"/>
									</fileset>
								</copy>
								<!-- copy the  icons-->
								<mkdir dir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/icons"/>
								<copy todir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/icons">
									<fileset dir="./target/temp/org.wso2.wsf.ide.wtp.ext-${version}/icons"/>
								</copy>
                                                                <!-- copy the lib files -->
                                                                <mkdir dir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/lib"/>
                                                                <copy todir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/lib">
                                                                        <fileset dir="./target/dist/org.wso2.wsf.ide.wtp.ext-${version}/lib"/>
                                                                </copy>
							
								<!-- copy the classes to classes directory-->
								<mkdir dir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/org"/>
								<copy todir="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}/org">
									<fileset dir="./target/temp/org.wso2.wsf.ide.wtp.ext-${version}/org">
										<include name="**/wso2/**"/>
									</fileset>
								</copy>
								<delete file="./target/org.wso2.wsf.ide.wtp.ext-${version}.jar"/>
								<delete file="./target/dist.jar"/>
								<!--Zip the eclipse plugin to the target directory -->
								<zip destfile="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}.jar" basedir="./target/plugin" update="true"/>
								<delete dir="./target/temp"/>
								<delete dir="./target/dist"/>
								<copy todir="./target" >
									<fileset dir="./target/plugin/" />
								</copy>
								<copy toFile="./target/dist.jar" >
									<fileset file="./target/plugin/org.wso2.wsf.ide.wtp.ext-${version}.jar" />
								</copy>
								<delete dir="./target/org.wso2.wsf.ide.wtp.ext-${version}"/>
								<delete dir="./target/plugin"/>
								<delete dir="./target/classes"/>
								 
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
